{% doc %}
  PDP right-column summary: emotional headline, title, short description, price, and delivery row.

  @param {product} product
  @param {variant} current_variant
  @param {section} section
  @param {number} price_per_night_cents
{% enddoc %}

        <div class="lusena-pdp-summary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.emotional_headline != blank -%}
            <span class="lusena-pdp-summary__eyebrow text-accent-gold font-serif italic leading-tight">
              {{ section.settings.emotional_headline | escape }}
            </span>
          {%- endif -%}

          <h1 class="lusena-pdp-summary__title font-serif text-primary leading-snug">
            {{ product.title | escape }}
          </h1>

          {%- if section.settings.tagline != blank -%}
            <p class="lusena-pdp-summary__tagline hidden md:block text-secondary text-sm leading-relaxed">
              {{ section.settings.tagline | escape }}
            </p>
          {%- endif -%}

          <div class="mt-3 md:mt-6" data-lusena-price-wrap>
            <div class="flex items-baseline gap-2 md:gap-3">
              <span class="lusena-pdp-summary__price text-xl md:text-2xl font-medium" data-lusena-price>
                {{ current_variant.price | money_without_trailing_zeros }}
              </span>
              {%- if current_variant.compare_at_price and current_variant.compare_at_price > current_variant.price -%}
                <span class="text-lg text-secondary/50 line-through" data-lusena-compare-at>
                  {{ current_variant.compare_at_price | money_without_trailing_zeros }}
                </span>
              {%- else -%}
                <span class="text-lg text-secondary/50 line-through hidden" data-lusena-compare-at></span>
              {%- endif -%}
            </div>
            <span
              class="block text-xs text-accent-cta font-medium mt-0.5"
              data-lusena-price-per-night
              data-prefix="{{ section.settings.price_per_night_prefix | escape }}"
              data-suffix="{{ section.settings.price_per_night_suffix | escape }}"
            >
              {{ section.settings.price_per_night_prefix | escape }}
              {{ price_per_night_cents | money_without_trailing_zeros }}
              {{ section.settings.price_per_night_suffix | escape }}
            </span>
          </div>

          {%- liquid
            assign has_delivery_micro = false
            if section.settings.delivery_eta_label != blank
              assign has_delivery_micro = true
            else
              if section.settings.delivery_returns_link_label != blank
                assign has_delivery_micro = true
              endif
            endif
          -%}

          {%- if has_delivery_micro -%}
            <div class="mt-4 md:mt-5 lusena-pdp-summary__delivery">
              <p class="lusena-pdp-summary__delivery-row">
                {% render 'lusena-icon', name: 'truck', class: 'lusena-pdp-summary__delivery-icon text-accent-cta shrink-0', stroke_width: 1.5 %}
                <span class="lusena-pdp-summary__delivery-copy">
                  {%- if section.settings.delivery_eta_label != blank -%}
                    <span class="text-primary font-medium">{{ section.settings.delivery_eta_label | escape }}</span>
                  {%- endif -%}
                  {%- if section.settings.delivery_returns_link_label != blank -%}
                    {%- if section.settings.delivery_eta_label != blank -%}<span aria-hidden="true"> &middot; </span>{%- endif -%}
                    <a
                      href="#details"
                      data-lusena-open-returns
                      class="text-accent-cta hover:underline underline-offset-2"
                    >
                      {{ section.settings.delivery_returns_link_label | escape }}
                    </a>
                  {%- endif -%}
                </span>
              </p>
            </div>
          {%- endif -%}
        </div>
