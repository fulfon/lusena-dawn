{% doc %}
  PDP guarantee box under CTA.

  @param {section} section
{% enddoc %}

        <div class="flex items-center justify-center gap-2 px-3 py-2 bg-brand-bg/50 border border-brand-bg rounded-sm{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {% render 'lusena-icon', name: 'shield-check', class: 'w-4 h-4 text-accent-cta shrink-0', stroke_width: 1.5 %}
          <p class="text-xs text-secondary leading-snug">
            <span class="font-medium text-primary">{{ section.settings.guarantee_heading | escape }}</span>
            &middot;
            <a
              href="#details"
              data-lusena-open-returns
              class="text-accent-cta hover:underline underline-offset-2"
            >
              {{ section.settings.guarantee_link_label | escape }}
            </a>
          </p>
        </div>
