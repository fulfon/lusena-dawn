{% doc %}
  PDP styles for the LUSENA product section.
{% enddoc %}

{% stylesheet %}
  .lusena-pdp {
    padding-top: var(--lusena-section-padding-top-mobile);
    padding-bottom: var(--lusena-section-padding-bottom-mobile);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  @media (min-width: 768px) {
    .lusena-pdp {
      padding-top: var(--lusena-section-padding-top-desktop);
      padding-bottom: var(--lusena-section-padding-bottom-desktop);
    }
  }

  .lusena-pdp .lusena-pdp-buy-box {
    display: flex;
    flex-direction: column;
  }

  .lusena-pdp .lusena-pdp-buy-box__summary {
    order: 1;
  }

  .lusena-pdp .lusena-pdp-buy-box__variant {
    order: 4;
    margin-top: 1.6rem;
  }

  .lusena-pdp .lusena-pdp-buy-box__atc {
    order: 5;
    margin-top: 2rem;
  }

  .lusena-pdp .lusena-pdp-buy-box__guarantee {
    order: 6;
    margin-top: 1.2rem;
  }

  .lusena-pdp .lusena-pdp-buy-box__payment {
    order: 7;
    margin-top: 1.2rem;
  }

  .lusena-pdp .lusena-pdp-buy-box__proof {
    order: 8;
    margin-top: 1.6rem;
  }

  .lusena-pdp .lusena-pdp-buy-box__desktop-divider {
    display: none;
  }

  .lusena-pdp .lusena-pdp-buy-box__benefits-mobile {
    order: 9;
    margin-top: 2.4rem;
    border-top: 1px solid rgba(74, 74, 74, 0.1);
    padding-top: 2rem;
  }

  .lusena-pdp .lusena-pdp-buy-box__benefits-list > :not([hidden]) ~ :not([hidden]) {
    margin-top: 1rem;
  }

  .lusena-pdp .lusena-pdp-buy-box__details {
    order: 10;
    margin-top: 3.2rem;
  }

  .lusena-pdp-details__heading {
    font-family: 'Source Serif 4', serif;
    font-size: 24px;
    line-height: 32px;
    font-weight: 400;
    letter-spacing: normal;
  }

  .lusena-pdp-accordion,
  .lusena-pdp-details__heading {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-feature-settings: normal;
    font-variation-settings: normal;
  }

  .lusena-pdp-accordion__trigger {
    font-family: 'Source Serif 4', serif;
    font-size: 16px;
    line-height: 24px;
    font-weight: 400;
    letter-spacing: normal;
  }

  .lusena-pdp-accordion__trigger[data-state='open'] .lusena-pdp-accordion__chevron {
    transform: rotate(180deg);
  }

  .lusena-pdp-accordion__content {
    overflow: hidden;
    will-change: height;
    height: 0;
  }

  .lusena-pdp-accordion__content[data-state='open'] {
    height: var(--radix-accordion-content-height);
  }

  .lusena-pdp-accordion__content[data-lusena-accordion-ready][data-state='open'] {
    animation: accordion-down 0.2s ease-out;
  }

  .lusena-pdp-accordion__content[data-lusena-accordion-ready][data-state='closed'] {
    animation: accordion-up 0.2s ease-out;
  }

  @media (prefers-reduced-motion: reduce) {
    .lusena-pdp-accordion__content[data-lusena-accordion-ready][data-state='open'],
    .lusena-pdp-accordion__content[data-lusena-accordion-ready][data-state='closed'] {
      animation: none;
    }
  }

  .lusena-pdp-accordion__body {
    font-family: Inter, sans-serif;
    font-size: 14px;
    line-height: 20px;
    font-weight: 400;
    letter-spacing: normal;
    color: rgba(74, 74, 74, 1);
  }

  .lusena-pdp-accordion__body p {
    margin: 0;
  }

  .lusena-pdp-accordion__body p + p {
    margin-top: 0.8rem;
  }

  .lusena-pdp-accordion__body table {
    width: 100%;
    border-collapse: collapse;
  }

  .lusena-pdp-accordion__body td {
    vertical-align: top;
  }

  .lusena-pdp-accordion__body [data-lusena-specs-table] .lusena-pdp-specs-row--alt {
    background: rgba(240, 238, 235, 0.5);
  }

  .lusena-pdp-accordion__body [data-lusena-specs-table] .lusena-pdp-specs-row--definition {
    background: rgba(247, 245, 242, 0.6);
  }

  .lusena-pdp .lusena-pdp-summary__eyebrow {
    display: block;
    font-size: 1.4rem;
    line-height: 1.8rem;
  }

  .lusena-pdp .lusena-pdp-summary__title {
    margin-top: 0.4rem;
    font-size: 2.4rem;
    line-height: 3.2rem;
  }

  .lusena-pdp .lusena-pdp-summary__tagline {
    padding-top: 0.4rem;
  }

  .lusena-pdp .lusena-pdp-summary__price {
    font-variant-numeric: tabular-nums;
  }

  .lusena-pdp .lusena-pdp-summary__delivery {
    display: flex;
    justify-content: flex-start;
  }

  .lusena-pdp .lusena-pdp-summary__delivery-row {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.8rem;
    width: 100%;
    max-width: 100%;
    text-align: left;
    color: rgba(74, 74, 74, 1);
  }

  .lusena-pdp .lusena-pdp-summary__delivery-icon {
    width: 1.4rem;
    height: 1.4rem;
    flex-shrink: 0;
  }

  .lusena-pdp .lusena-pdp-summary__delivery-copy,
  .lusena-pdp .lusena-pdp-summary__delivery-text {
    font-size: 1.2rem;
    line-height: 1.6rem;
  }

  .lusena-pdp .lusena-pdp-proof-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .lusena-pdp .lusena-pdp-proof-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    border: 1px solid rgba(74, 74, 74, 0.15);
    border-radius: 9999px;
    padding: 0.6rem 1.2rem;
    font-size: 1.2rem;
    line-height: 1.6rem;
    color: rgba(74, 74, 74, 1);
    transition: border-color 150ms ease, color 150ms ease;
    cursor: default;
  }

  .lusena-pdp .lusena-pdp-proof-chip:hover {
    border-color: rgba(14, 94, 90, 0.3);
    color: rgb(17 17 17);
  }

  .lusena-pdp .lusena-pdp-payment {
    width: 100%;
  }

  .lusena-pdp .lusena-pdp-payment__desktop {
    display: none;
    align-items: center;
    gap: 0.8rem;
  }

  .lusena-pdp .lusena-pdp-payment__mobile {
    display: block;
  }

  .lusena-pdp .lusena-pdp-payment__mobile-row {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    gap: 0.4rem;
  }

  .lusena-pdp .lusena-pdp-payment-methods {
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .lusena-pdp .lusena-pdp-payment-methods--desktop {
    flex-wrap: nowrap;
  }

  .lusena-pdp .lusena-pdp-payment-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(74, 74, 74, 0.1);
    border-radius: 0.2rem;
    padding: 0.2rem 0.6rem;
  }

  .lusena-pdp .lusena-pdp-payment-badge--mobile {
    flex-shrink: 1;
    min-width: 0;
    padding: 0.2rem 0.2rem;
  }

  .lusena-pdp .lusena-pdp-payment-icon {
    width: auto;
    object-fit: contain;
  }

  .lusena-pdp .lusena-pdp-payment-icon--visa-desktop {
    height: 18px;
  }

  .lusena-pdp .lusena-pdp-payment-icon--desktop {
    height: 20px;
  }

  .lusena-pdp .lusena-pdp-payment-icon--visa-mobile {
    height: 12px;
  }

  .lusena-pdp .lusena-pdp-payment-icon--mobile {
    height: 14px;
  }

  .lusena-pdp .lusena-pdp-payment-secure {
    font-size: 11px;
    line-height: 14px;
    color: rgba(74, 74, 74, 0.6);
    white-space: nowrap;
  }

  .lusena-pdp .lusena-pdp-payment-secure--mobile {
    flex-shrink: 0;
    font-size: 9px;
    line-height: 12px;
  }

  @media (min-width: 375px) {
    .lusena-pdp .lusena-pdp-payment__mobile-row {
      gap: 0.6rem;
    }

    .lusena-pdp .lusena-pdp-payment-badge--mobile {
      padding: 0.2rem 0.4rem;
    }

    .lusena-pdp .lusena-pdp-payment-icon--visa-mobile {
      height: 14px;
    }

    .lusena-pdp .lusena-pdp-payment-icon--mobile {
      height: 16px;
    }

    .lusena-pdp .lusena-pdp-payment-secure--mobile {
      font-size: 10px;
      line-height: 14px;
    }
  }

  .lusena-pdp .lusena-pdp__stock-dot--available {
    background-color: #2f7d4e;
  }

  .lusena-pdp .lusena-pdp__stock-dot--unavailable {
    background-color: #b91c1c;
  }

  @media (min-width: 768px) {
    .lusena-pdp .lusena-pdp-payment__desktop {
      display: flex;
    }

    .lusena-pdp .lusena-pdp-payment__mobile {
      display: none;
    }

    .lusena-pdp .lusena-pdp-buy-box {
      position: sticky;
      top: 12.8rem;
      align-self: flex-start;
    }

    .lusena-pdp .lusena-pdp-buy-box__proof {
      order: 4;
      margin-top: 2rem;
    }

    .lusena-pdp .lusena-pdp-buy-box__desktop-divider {
      display: block;
      order: 5;
      height: 1px;
      background: rgba(74, 74, 74, 0.1);
      margin-top: 2rem;
    }

    .lusena-pdp .lusena-pdp-buy-box__variant {
      order: 6;
      margin-top: 2rem;
    }

    .lusena-pdp .lusena-pdp-buy-box__atc {
      order: 7;
      margin-top: 2rem;
    }

    .lusena-pdp .lusena-pdp-buy-box__guarantee {
      order: 8;
      margin-top: 1.6rem;
    }

    .lusena-pdp .lusena-pdp-buy-box__payment {
      order: 9;
      margin-top: 1.6rem;
    }

    .lusena-pdp .lusena-pdp-buy-box__benefits-mobile {
      display: none;
    }

    .lusena-pdp .lusena-pdp-buy-box__details {
      margin-top: 2.4rem;
    }

    .lusena-pdp-details__heading {
      font-size: 28px;
      line-height: 36px;
    }

    .lusena-pdp .lusena-pdp-summary__eyebrow {
      font-size: 1.8rem;
      line-height: 2.8rem;
    }

    .lusena-pdp .lusena-pdp-summary__title {
      margin-top: 0.8rem;
      font-size: 4rem;
      line-height: 4.8rem;
    }
  }

  .lusena-pdp .lusena-option__input:checked + .lusena-option__pill {
    border-width: 2px;
    border-color: var(--accent-cta, #0e5e5a);
    background-color: rgb(240 238 235);
    color: rgb(17 17 17);
  }

  .lusena-pdp .lusena-option__input:checked + .lusena-option__swatch {
    border-color: var(--accent-cta, #0e5e5a);
    box-shadow:
      0 0 0 2px #fff,
      0 0 0 4px var(--accent-cta, #0e5e5a);
  }

  .lusena-pdp .lusena-gallery__desktop {
    display: none;
  }

  .lusena-pdp .lusena-gallery__mobile {
    display: block;
  }

  @media screen and (min-width: 750px) {
    .lusena-pdp .lusena-gallery__desktop {
      display: block;
    }

    .lusena-pdp .lusena-gallery__mobile {
      display: none;
    }
  }

  .lusena-pdp .lusena-gallery__desktop-grid {
    display: flex;
    gap: 12px;
  }

  .lusena-pdp .lusena-media-thumbs-desktop {
    width: 72px;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .lusena-pdp .lusena-media-thumb {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    border: 2px solid transparent;
    border-radius: 2px;
    overflow: hidden;
    background: rgb(240 238 235);
    transition: border-color 150ms ease;
  }

  .lusena-pdp .lusena-media-thumb:hover {
    border-color: rgba(74, 74, 74, 0.3);
  }

  .lusena-pdp .lusena-media-thumb[aria-current='true'] {
    border-color: var(--accent-cta, #0e5e5a);
  }

  .lusena-pdp .lusena-media-thumb--proof {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lusena-pdp .lusena-media-thumb__proof-icon {
    width: 26px;
    height: 26px;
    border-radius: 999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--accent-cta, #0e5e5a);
    background: rgb(247 245 242);
  }

  .lusena-pdp .lusena-media-stage {
    flex: 1;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    position: relative;
    background: rgb(240 238 235);
  }

  .lusena-pdp .lusena-media-stage__content {
    position: absolute;
    inset: 0;
    opacity: 1;
    transition: opacity 300ms ease-in-out;
  }

  .lusena-pdp .lusena-media-stage[data-stage-fade='out'] .lusena-media-stage__content {
    opacity: 0;
  }

  .lusena-pdp [data-lusena-stage-action][data-lusena-stage-zoomable='true'] {
    cursor: zoom-in;
  }

  .lusena-pdp [data-lusena-stage-action][data-lusena-stage-zoomable='true']:focus-visible {
    outline: 2px solid var(--accent-cta, #0e5e5a);
    outline-offset: 2px;
  }

  .lusena-pdp .lusena-media-stage__zoom {
    position: absolute;
    right: 1.2rem;
    bottom: 1.2rem;
    width: 2.8rem;
    height: 2.8rem;
    border-radius: 9999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: rgb(17 17 17);
    background: rgb(255 255 255 / 0.8);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    opacity: 0;
    pointer-events: none;
    transition: opacity 150ms ease;
  }

  .lusena-pdp [data-lusena-stage-action][data-lusena-stage-zoomable='true']:hover .lusena-media-stage__zoom,
  .lusena-pdp [data-lusena-stage-action][data-lusena-stage-zoomable='true']:focus-visible .lusena-media-stage__zoom {
    opacity: 1;
  }

  .lusena-pdp [data-lusena-stage-action][data-lusena-stage-zoomable='false'] .lusena-media-stage__zoom,
  .lusena-pdp .lusena-media-stage[data-stage-type='proof'] .lusena-media-stage__zoom {
    display: none;
  }

  .lusena-pdp [data-lusena-media-stage] img {
    transition: opacity 200ms ease-in-out, transform 500ms ease;
    transform-origin: center;
  }

  @media (hover: hover) and (pointer: fine) {
    .lusena-pdp [data-lusena-media-stage]:hover img {
      transform: scale(1.05);
    }
  }

  .lusena-pdp .lusena-proof-tile {
    width: 100%;
    height: 100%;
    padding: 2.4rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.2rem;
    text-align: center;
    background: rgb(247 245 242);
  }

  .lusena-pdp .lusena-proof-tile__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    border-radius: 999px;
    color: var(--accent-cta, #0e5e5a);
    background: rgb(255 255 255 / 0.75);
  }

  .lusena-pdp .lusena-proof-tile__title {
    font-family: 'Source Serif 4', serif;
    font-size: 2.2rem;
    line-height: 1.2;
    color: rgb(17 17 17);
  }

  .lusena-pdp .lusena-proof-tile__body {
    font-size: 1.2rem;
    line-height: 1.5;
    color: rgba(74, 74, 74, 0.9);
    max-width: 30ch;
  }

  .lusena-pdp .lusena-proof-tile__cta {
    font-size: 1.2rem;
    color: var(--accent-cta, #0e5e5a);
    text-decoration: underline;
    text-underline-offset: 0.25rem;
  }

  .lusena-pdp .lusena-proof-tile__cta:hover {
    opacity: 0.8;
  }

  .lusena-pdp .lusena-media-stage[data-stage-type='proof'] img {
    display: none;
  }

  .lusena-pdp [data-lusena-stage-proof] {
    display: none;
    position: absolute;
    inset: 0;
  }

  .lusena-pdp .lusena-media-stage[data-stage-type='proof'] [data-lusena-stage-proof] {
    display: flex;
  }

  .lusena-pdp .lusena-gallery__mobile-track {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 8px;
    margin-left: -1.6rem;
    margin-right: -1.6rem;
    padding-left: 1.6rem;
    padding-right: 1.6rem;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    opacity: 1;
    transition: opacity 300ms ease-in-out;
  }

  .lusena-pdp .lusena-gallery__mobile-track[data-fade-state='out'] {
    opacity: 0;
  }

  .lusena-pdp .lusena-gallery__mobile-track::-webkit-scrollbar {
    display: none;
  }

  .lusena-pdp .lusena-gallery__mobile-slide {
    scroll-snap-align: center;
    flex: 0 0 auto;
    width: 85vw;
    max-width: 400px;
    height: min(60vh, 85vw);
    aspect-ratio: 4 / 5;
    position: relative;
    overflow: hidden;
    border-radius: 2px;
    background: rgb(240 238 235);
  }

  .lusena-pdp .lusena-gallery__mobile-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .lusena-pdp .lusena-gallery__mobile-slide[data-lusena-mobile-zoomable] {
    cursor: zoom-in;
  }

  .lusena-pdp .lusena-gallery__mobile-zoom {
    position: absolute;
    right: 0.8rem;
    bottom: 0.8rem;
    width: 2.4rem;
    height: 2.4rem;
    border-radius: 9999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: rgb(17 17 17);
    background: rgb(255 255 255 / 0.7);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    pointer-events: none;
  }

  .lusena-pdp .lusena-gallery__mobile-slide--proof {
    background: rgb(247 245 242);
  }

  .lusena-pdp .lusena-gallery__mobile-dots {
    margin-top: 1.2rem;
    display: flex;
    justify-content: center;
    gap: 0.6rem;
  }

  .lusena-pdp .lusena-gallery__dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    border: 0;
    padding: 0;
    margin: 0;
    cursor: pointer;
    background: rgba(74, 74, 74, 0.25);
    transition: background-color 200ms ease;
  }

  .lusena-pdp .lusena-gallery__dot[aria-current='true'] {
    background: rgb(17 17 17);
  }

  .lusena-pdp .lusena-gallery__mobile-dots[hidden] {
    display: none;
  }

  .lusena-pdp .lusena-media-thumb[hidden],
  .lusena-pdp .lusena-gallery__mobile-slide[hidden],
  .lusena-pdp .lusena-gallery__dot[hidden] {
    display: none !important;
  }

  .lusena-lightbox {
    position: fixed;
    inset: 0;
    z-index: 6001;
    display: flex;
    flex-direction: column;
    background: rgba(0, 0, 0, 0.92);
    opacity: 0;
    pointer-events: none;
    transition: opacity 200ms ease;
  }

  .lusena-lightbox.is-visible {
    opacity: 1;
    pointer-events: auto;
  }

  .lusena-lightbox[hidden] {
    display: none;
  }

  .lusena-lightbox__top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: max(0.75rem, env(safe-area-inset-top)) 1.6rem 1.2rem;
    position: relative;
    z-index: 2;
  }

  .lusena-lightbox__counter {
    font-size: 1.4rem;
    line-height: 2rem;
    color: rgb(255 255 255 / 0.7);
    font-variant-numeric: tabular-nums;
    user-select: none;
  }

  .lusena-lightbox__close {
    width: 4.4rem;
    height: 4.4rem;
    border: 0;
    border-radius: 9999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: rgb(255 255 255 / 0.8);
    transition: color 150ms ease, background-color 150ms ease;
  }

  .lusena-lightbox__close:hover {
    color: rgb(255 255 255);
    background: rgb(255 255 255 / 0.1);
  }

  .lusena-lightbox__viewport {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    user-select: none;
    touch-action: none;
    cursor: default;
  }

  .lusena-lightbox__image-wrap {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .lusena-lightbox__loader {
    width: 19.2rem;
    height: 19.2rem;
    border-radius: 0.8rem;
    background: rgb(255 255 255 / 0.05);
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .lusena-lightbox__image-wrap.is-loaded .lusena-lightbox__loader,
  .lusena-lightbox__image-wrap.is-error .lusena-lightbox__loader {
    display: none;
  }

  .lusena-lightbox__image {
    display: block;
    max-width: 90vw;
    max-height: 85vh;
    object-fit: contain;
    transition: transform 200ms ease-out, opacity 200ms ease-out;
    transform-origin: center;
    opacity: 0;
    touch-action: none;
    pointer-events: none;
  }

  .lusena-lightbox__image-wrap.is-loaded .lusena-lightbox__image {
    opacity: 1;
  }

  .lusena-lightbox__image-wrap.is-error .lusena-lightbox__image {
    display: none;
  }

  .lusena-lightbox__fallback {
    background: rgb(240 238 235);
    border-radius: 0.2rem;
    padding: 4.8rem;
    font-size: 1.4rem;
    line-height: 2rem;
    color: rgb(74 74 74);
  }

  .lusena-lightbox__image-wrap.is-error .lusena-lightbox__fallback {
    display: block !important;
  }

  .lusena-lightbox__nav {
    display: none;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    width: 4.4rem;
    height: 4.4rem;
    border: 0;
    border-radius: 9999px;
    align-items: center;
    justify-content: center;
    color: rgb(255 255 255 / 0.6);
    transition: color 150ms ease, background-color 150ms ease;
  }

  .lusena-lightbox__nav:hover {
    color: rgb(255 255 255);
    background: rgb(255 255 255 / 0.1);
  }

  .lusena-lightbox__nav[disabled] {
    opacity: 0.4;
    pointer-events: none;
  }

  .lusena-lightbox__nav--prev {
    left: 1.2rem;
  }

  .lusena-lightbox__nav--prev svg {
    transform: rotate(180deg);
  }

  .lusena-lightbox__nav--next {
    right: 1.2rem;
  }

  .lusena-lightbox__bottom {
    padding: 0.8rem 1.6rem max(1rem, env(safe-area-inset-bottom));
    text-align: center;
    min-height: 3.6rem;
  }

  .lusena-lightbox__hint {
    font-size: 1.2rem;
    line-height: 1.6rem;
    color: rgb(255 255 255 / 0.4);
    user-select: none;
  }

  .lusena-lightbox__hint--desktop {
    display: none;
  }

  .lusena-lightbox__hint--mobile {
    display: inline;
  }

  @media screen and (min-width: 750px) {
    .lusena-lightbox.is-over-image .lusena-lightbox__viewport {
      cursor: zoom-in;
    }

    .lusena-lightbox.is-over-image.is-zoomed .lusena-lightbox__viewport {
      cursor: zoom-out;
    }

    .lusena-lightbox__nav {
      display: inline-flex;
    }

    .lusena-lightbox.is-zoomed .lusena-lightbox__nav {
      display: none;
    }

    .lusena-lightbox__hint--desktop {
      display: inline;
    }

    .lusena-lightbox__hint--mobile {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .lusena-pdp .lusena-media-stage__content,
    .lusena-pdp .lusena-gallery__mobile-track,
    .lusena-pdp [data-lusena-media-stage] img {
      transition: none;
    }
    .lusena-pdp .lusena-gallery__dot,
    .lusena-pdp .lusena-media-thumb {
      transition: none;
    }

    .lusena-pdp [data-lusena-media-stage]:hover img {
      transform: none;
    }

    .lusena-lightbox,
    .lusena-lightbox__image {
      transition: none;
    }
  }

  .lusena-pdp details[open] .lusena-pdp__chevron {
    transform: rotate(180deg);
  }
