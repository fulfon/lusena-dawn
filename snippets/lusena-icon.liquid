{% doc %}
  Renders a Lucide-style inline SVG icon (subset used by the LUSENA draft shop).

  @param {string} name - Icon name (e.g. "shopping-bag", "search", "user", "menu")
  @param {string} [class] - Optional CSS classes applied to the <svg>
  @param {number} [stroke_width] - Optional stroke width (default: 1.5)
  @param {string} [aria_label] - Optional accessible label; when blank, icon is aria-hidden
{% enddoc %}

{%- liquid
  assign icon_name = name | default: ''
  assign icon_class = class | default: ''
  assign icon_stroke_width = stroke_width | default: 1.5
  assign icon_aria_label = aria_label | default: ''
-%}

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="{{ icon_stroke_width }}"
  stroke-linecap="round"
  stroke-linejoin="round"
  class="{{ icon_class }}"
  {%- if icon_aria_label != blank -%}
    role="img"
    aria-label="{{ icon_aria_label | escape }}"
  {%- else -%}
    aria-hidden="true"
    focusable="false"
  {%- endif -%}
>
  {%- case icon_name -%}
    {%- when 'menu' -%}
      <path d="M4 5h16"></path>
      <path d="M4 12h16"></path>
      <path d="M4 19h16"></path>

    {%- when 'search' -%}
      <path d="m21 21-4.34-4.34"></path>
      <circle cx="11" cy="11" r="8"></circle>

    {%- when 'user' -%}
      <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>

    {%- when 'shopping-bag' -%}
      <path d="M16 10a4 4 0 0 1-8 0"></path>
      <path d="M3.103 6.034h17.794"></path>
      <path d="M3.4 5.467a2 2 0 0 0-.4 1.2V20a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6.667a2 2 0 0 0-.4-1.2l-2-2.667A2 2 0 0 0 17 2H7a2 2 0 0 0-1.6.8z"></path>

    {%- when 'mail' -%}
      <rect x="3" y="5" width="18" height="14" rx="2"></rect>
      <path d="m3 7 9 6 9-6"></path>

    {%- when 'banknote' -%}
      <rect x="3" y="6" width="18" height="12" rx="2"></rect>
      <circle cx="12" cy="12" r="2"></circle>
      <path d="M6 12h.01"></path>
      <path d="M18 12h.01"></path>

    {%- when 'star' -%}
      <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path>

    {%- when 'shield-check' -%}
      <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path>
      <path d="m9 12 2 2 4-4"></path>

    {%- when 'truck' -%}
      <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"></path>
      <path d="M15 18H9"></path>
      <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"></path>
      <circle cx="17" cy="18" r="2"></circle>
      <circle cx="7" cy="18" r="2"></circle>

    {%- when 'clock' -%}
      <path d="M12 6v6l4 2"></path>
      <circle cx="12" cy="12" r="10"></circle>

    {%- when 'x' -%}
      <path d="M18 6 6 18"></path>
      <path d="m6 6 12 12"></path>

    {%- when 'check' -%}
      <path d="M20 6 9 17l-5-5"></path>

    {%- when 'sparkles' -%}
      <path d="M11.017 2.814a1 1 0 0 1 1.966 0l1.051 5.558a2 2 0 0 0 1.594 1.594l5.558 1.051a1 1 0 0 1 0 1.966l-5.558 1.051a2 2 0 0 0-1.594 1.594l-1.051 5.558a1 1 0 0 1-1.966 0l-1.051-5.558a2 2 0 0 0-1.594-1.594l-5.558-1.051a1 1 0 0 1 0-1.966l5.558-1.051a2 2 0 0 0 1.594-1.594z"></path>
      <path d="M20 2v4"></path>
      <path d="M22 4h-4"></path>
      <circle cx="4" cy="20" r="2"></circle>

    {%- when 'wind' -%}
      <path d="M12.8 19.6A2 2 0 1 0 14 16H2"></path>
      <path d="M17.5 8a2.5 2.5 0 1 1 2 4H2"></path>
      <path d="M9.8 4.4A2 2 0 1 1 11 8H2"></path>

    {%- when 'droplets' -%}
      <path d="M7 16.3c2.2 0 4-1.83 4-4.05 0-1.16-.57-2.26-1.71-3.19S7.29 6.75 7 5.3c-.29 1.45-1.14 2.84-2.29 3.76S3 11.1 3 12.25c0 2.22 1.8 4.05 4 4.05z"></path>
      <path d="M12.56 6.6A10.97 10.97 0 0 0 14 3.02c.5 2.5 2 4.9 4 6.5s3 3.5 3 5.5a6.98 6.98 0 0 1-11.91 4.97"></path>

    {%- when 'heart' -%}
      <path d="M2 9.5a5.5 5.5 0 0 1 9.591-3.676.56.56 0 0 0 .818 0A5.49 5.49 0 0 1 22 9.5c0 2.29-1.5 4-3 5.5l-5.492 5.313a2 2 0 0 1-3 .019L5 15c-1.5-1.5-3-3.2-3-5.5"></path>

    {%- when 'map-pin' -%}
      <path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path>
      <circle cx="12" cy="10" r="3"></circle>

    {%- when 'layers' -%}
      <path d="M12.83 2.18a2 2 0 0 0-1.66 0L2.6 6.08a1 1 0 0 0 0 1.84l8.58 3.9a2 2 0 0 0 1.66 0l8.58-3.9a1 1 0 0 0 0-1.84z"></path>
      <path d="M2 12l9.17 4.17a2 2 0 0 0 1.66 0L22 12"></path>
      <path d="M2 16l9.17 4.17a2 2 0 0 0 1.66 0L22 16"></path>

    {%- when 'package' -%}
      <path d="M11 21.73a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73z"></path>
      <path d="M12 22V12"></path>
      <polyline points="3.29 7 12 12 20.71 7"></polyline>
      <path d="m7.5 4.27 9 5.15"></path>

    {%- when 'rotate-ccw' -%}
      <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"></path>
      <path d="M3 3v5h5"></path>

    {%- when 'gift' -%}
      <rect x="3" y="8" width="18" height="4" rx="1"></rect>
      <path d="M12 8v13"></path>
      <path d="M19 12v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-7"></path>
      <path d="M12 8H7.5a2.5 2.5 0 0 1 0-5C10 3 12 8 12 8z"></path>
      <path d="M12 8h4.5a2.5 2.5 0 0 0 0-5C14 3 12 8 12 8z"></path>

    {%- when 'lock' -%}
      <rect x="3" y="11" width="18" height="11" rx="2"></rect>
      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>

    {%- when 'minus' -%}
      <path d="M5 12h14"></path>

    {%- when 'plus' -%}
      <path d="M5 12h14"></path>
      <path d="M12 5v14"></path>

    {%- when 'chevron-down' -%}
      <path d="m6 9 6 6 6-6"></path>

    {%- when 'chevron-right' -%}
      <path d="m9 18 6-6-6-6"></path>

    {%- when 'arrow-right' -%}
      <path d="M5 12h14"></path>
      <path d="m12 5 7 7-7 7"></path>
  {%- endcase -%}
</svg>

