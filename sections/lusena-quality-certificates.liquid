<section
  class="bg-white border-t border-brand-bg lusena-quality-certificates"
  style="
    --lusena-section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --lusena-section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --lusena-section-padding-top-desktop: {{ section.settings.padding_top }}px;
    --lusena-section-padding-bottom-desktop: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div{% if settings.animations_reveal_on_scroll %} class="scroll-trigger animate--slide-in"{% endif %} {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}>
        <h2 class="text-3xl md:text-4xl font-serif text-primary mb-6">
          {{ section.settings.cert_heading | escape }}
        </h2>
        <div class="text-secondary font-light text-lg mb-8">
          {{ section.settings.cert_body }}
        </div>

        {%- assign certificate_url = blank -%}
        {%- assign certificate_label = section.settings.cert_button_label -%}
        {%- if certificate_label == blank -%}
          {%- assign certificate_label = 'Pobierz Certyfikat (PDF)' -%}
        {%- endif -%}

        {%- if shop.metafields.lusena.oeko_tex_certificate != blank -%}
          {%- assign certificate_file = shop.metafields.lusena.oeko_tex_certificate.value -%}
          {%- if certificate_file != blank -%}
            {%- if certificate_file.url != blank -%}
              {%- assign certificate_url = certificate_file.url -%}
            {%- endif -%}
          {%- endif -%}
        {%- endif -%}

        {%- if certificate_url == blank -%}
          {%- if section.settings.cert_button_link != blank -%}
            {%- assign certificate_url = section.settings.cert_button_link -%}
          {%- endif -%}
        {%- endif -%}

        {%- if certificate_url != blank -%}
          <a
            href="{{ certificate_url }}"
            target="_blank"
            rel="noopener"
            class="lusena-btn lusena-btn--outline lusena-btn--size-default min-w-[200px]"
          >
            {{ certificate_label | escape }}
          </a>
        {%- endif -%}
      </div>

      <div class="grid grid-cols-2 gap-4{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}>
        <div class="bg-neutral-50 aspect-square flex items-center justify-center border border-neutral-100">
          {%- if section.settings.cert_logo_1 != blank -%}
            {{ section.settings.cert_logo_1 | image_url: width: 400 | image_tag: loading: 'lazy' }}
          {%- else -%}
            <span class="text-xs text-gray-400">{{ section.settings.cert_logo_1_placeholder | escape }}</span>
          {%- endif -%}
        </div>
        <div class="bg-neutral-50 aspect-square flex items-center justify-center border border-neutral-100">
          {%- if section.settings.cert_logo_2 != blank -%}
            {{ section.settings.cert_logo_2 | image_url: width: 400 | image_tag: loading: 'lazy' }}
          {%- else -%}
            <span class="text-xs text-gray-400">{{ section.settings.cert_logo_2_placeholder | escape }}</span>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .lusena-quality-certificates {
    padding-top: var(--lusena-section-padding-top-mobile);
    padding-bottom: var(--lusena-section-padding-bottom-mobile);
  }

  @media (min-width: 768px) {
    .lusena-quality-certificates {
      padding-top: var(--lusena-section-padding-top-desktop);
      padding-bottom: var(--lusena-section-padding-bottom-desktop);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "LUSENA Quality: Certs",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (desktop)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 56
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (desktop)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 56
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding top (mobile)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding bottom (mobile)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "text",
      "id": "cert_heading",
      "label": "Certificates heading",
      "default": "Certyfikaty Bezpieczeństwa"
    },
    {
      "type": "richtext",
      "id": "cert_body",
      "label": "Certificates body",
      "default": "<p>Twoja skóra dotyka poduszki przez 8 godzin dziennie. Musisz mieć pewność, że jest wolna od chemii. Nasz jedwab posiada certyfikat <strong>OEKO-TEX® Standard 100</strong> (Klasa I — bezpieczne nawet dla niemowląt).</p>"
    },
    {
      "type": "text",
      "id": "cert_button_label",
      "label": "Certificate button label",
      "default": "Pobierz Certyfikat (PDF)"
    },
    {
      "type": "url",
      "id": "cert_button_link",
      "label": "Certificate button link (fallback)",
      "info": "Preferowane: metafield sklepu `lusena.oeko_tex_certificate` (file_reference). Jeśli metafield jest pusty, użyty zostanie ten link."
    },
    {
      "type": "image_picker",
      "id": "cert_logo_1",
      "label": "Certificate logo 1"
    },
    {
      "type": "text",
      "id": "cert_logo_1_placeholder",
      "label": "Certificate logo 1 placeholder",
      "default": "Logo OEKO-TEX"
    },
    {
      "type": "image_picker",
      "id": "cert_logo_2",
      "label": "Certificate logo 2"
    },
    {
      "type": "text",
      "id": "cert_logo_2_placeholder",
      "label": "Certificate logo 2 placeholder",
      "default": "Logo 6A Grade"
    }
  ],
  "presets": [
    {
      "name": "LUSENA Quality: Certs"
    }
  ]
}
{% endschema %}
