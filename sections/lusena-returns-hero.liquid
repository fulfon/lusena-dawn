{%- liquid
  assign override_style = ''
  if section.settings.padding_top > 0
    assign override_style = override_style | append: '--lusena-section-padding-top-desktop:' | append: section.settings.padding_top | append: 'px;'
  endif
  if section.settings.padding_bottom > 0
    assign override_style = override_style | append: '--lusena-section-padding-bottom-desktop:' | append: section.settings.padding_bottom | append: 'px;'
  endif
  if section.settings.padding_top_mobile > 0
    assign override_style = override_style | append: '--lusena-section-padding-top-mobile:' | append: section.settings.padding_top_mobile | append: 'px;'
  endif
  if section.settings.padding_bottom_mobile > 0
    assign override_style = override_style | append: '--lusena-section-padding-bottom-mobile:' | append: section.settings.padding_bottom_mobile | append: 'px;'
  endif
-%}
<section
  class="bg-brand-bg text-center overflow-hidden lusena-returns-hero lusena-spacing--hero"
  {% if override_style != blank %}
    style="{{ override_style }}"
  {% endif %}
>
  <div class="lusena-returns-hero__shield" aria-hidden="true">
    {% render 'lusena-icon', name: 'shield-check', class: 'lusena-returns-hero__shield-icon', stroke_width: 0.5 %}
  </div>

  <div class="container lusena-returns-hero__container relative mx-auto">
    <span class="text-accent-gold text-sm tracking-widest uppercase font-semibold lusena-gap-kicker{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {{ section.settings.hero_kicker | escape }}
    </span>
    <h1 class="lusena-returns-hero__title font-serif text-primary lusena-gap-heading{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {{ section.settings.hero_heading_line_1 | escape }}<br>
      <span class="italic">{{ section.settings.hero_heading_line_2 | escape }}</span>
    </h1>
    <p class="text-lg md:text-xl font-light text-secondary leading-relaxed max-w-2xl mx-auto{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {{ section.settings.hero_body | escape }}
    </p>

    {%- if section.blocks.size > 0 -%}
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6 pt-4{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}
>
        {%- for block in section.blocks -%}
          {%- if block.type == 'proof' and block.settings.text != blank -%}
            <span class="inline-flex items-center gap-2 text-sm text-primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
              {% render 'lusena-icon', name: 'check', class: 'w-4 h-4 text-accent-cta', stroke_width: 2 %}
              {{ block.settings.text | escape }}
            </span>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="pt-4{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="inline-flex items-center gap-2 px-6 py-3 border border-accent-gold/30 rounded-full bg-white/50 lusena-returns-hero__badge">
        {% render 'lusena-icon', name: 'rotate-ccw', class: 'w-4 h-4 text-accent-gold', stroke_width: 1.5 %}
        <span class="text-accent-gold font-medium text-sm">{{ section.settings.hero_badge | escape }}</span>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .lusena-returns-hero {
    position: relative;
  }

  .lusena-returns-hero__shield {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.03;
    pointer-events: none;
  }

  .lusena-returns-hero__shield-icon {
    width: 44.8rem;
    height: 44.8rem;
  }

  .lusena-returns-hero__container {
    max-width: 89.6rem !important;
  }

  .lusena-returns-hero__badge {
    -webkit-backdrop-filter: blur(12px);
    backdrop-filter: blur(12px);
  }

  .lusena-returns-hero__title {
    font-size: 3.6rem;
    line-height: 1.05;
  }

  @media (min-width: 768px) {

    .lusena-returns-hero__title {
      font-size: 6rem;
      line-height: 1;
    }
  }
{% endstylesheet %}

