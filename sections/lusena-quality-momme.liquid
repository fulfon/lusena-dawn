{%- liquid
  assign override_style = ''
  if section.settings.padding_top > 0
    assign override_style = override_style | append: '--lusena-section-padding-top-desktop:' | append: section.settings.padding_top | append: 'px;'
  endif
  if section.settings.padding_bottom > 0
    assign override_style = override_style | append: '--lusena-section-padding-bottom-desktop:' | append: section.settings.padding_bottom | append: 'px;'
  endif
  if section.settings.padding_top_mobile > 0
    assign override_style = override_style | append: '--lusena-section-padding-top-mobile:' | append: section.settings.padding_top_mobile | append: 'px;'
  endif
  if section.settings.padding_bottom_mobile > 0
    assign override_style = override_style | append: '--lusena-section-padding-bottom-mobile:' | append: section.settings.padding_bottom_mobile | append: 'px;'
  endif
-%}
<section
  class="bg-white lusena-quality-momme lusena-spacing--standard"
  {% if override_style != blank %}
    style="{{ override_style }}"
  {% endif %}
>
  <div class="container grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
    <div class="bg-neutral-100 aspect-square flex items-center justify-center rounded-sm overflow-hidden{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}
>
      {%- if section.settings.momme_image != blank -%}
        {{
          section.settings.momme_image
          | image_url: width: 1400
          | image_tag:
            class: 'w-full h-full object-cover',
            loading: 'lazy',
            widths: '600, 900, 1200, 1400',
            sizes: '(min-width: 768px) 45vw, 90vw'
        }}
      {%- else -%}
        <span class="text-gray-400 font-light italic text-center px-6">
          {{ section.settings.momme_image_placeholder | escape }}
        </span>
      {%- endif -%}
    </div>

    <div{% if settings.animations_reveal_on_scroll %} class="scroll-trigger animate--slide-in"{% endif %} {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}
>
      <h2 class="text-3xl md:text-4xl font-serif text-primary lusena-gap-heading">
        {{ section.settings.momme_heading | escape }}
      </h2>
      <div class="space-y-4 text-secondary text-lg font-light leading-relaxed">
        {{ section.settings.momme_body }}
        {%- if section.blocks.size > 0 -%}
          <ul class="space-y-2 mt-4">
            {%- for block in section.blocks -%}
              {%- if block.type == 'momme_benefit' -%}
                <li class="flex flex-nowrap items-start gap-3" {{ block.shopify_attributes }}>
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-accent-gold shrink-0"
                    style="margin-top: calc((1.625em - 0.375rem) / 2);"
                    aria-hidden="true"
                  ></span>
                  <span class="min-w-0 flex-1">{{- block.settings.text | escape -}}</span>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

