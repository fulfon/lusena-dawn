{%- liquid
  assign override_style = ''
  if section.settings.padding_top > 0
    assign override_style = override_style | append: '--lusena-section-padding-top-desktop:' | append: section.settings.padding_top | append: 'px;'
  endif
  if section.settings.padding_bottom > 0
    assign override_style = override_style | append: '--lusena-section-padding-bottom-desktop:' | append: section.settings.padding_bottom | append: 'px;'
  endif
  if section.settings.padding_top_mobile > 0
    assign override_style = override_style | append: '--lusena-section-padding-top-mobile:' | append: section.settings.padding_top_mobile | append: 'px;'
  endif
  if section.settings.padding_bottom_mobile > 0
    assign override_style = override_style | append: '--lusena-section-padding-bottom-mobile:' | append: section.settings.padding_bottom_mobile | append: 'px;'
  endif
-%}
<section
  class="bg-white lusena-quality-origin lusena-spacing--standard"
  {% if override_style != blank %}
    style="{{ override_style }}"
  {% endif %}
>
  <div class="container grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
    <div class="order-1 md:order-2{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}
>
      <span class="text-accent-gold text-sm tracking-widest uppercase font-semibold lusena-gap-kicker">
        {{ section.settings.origin_kicker | escape }}
      </span>
      <h2 class="lusena-quality-origin__heading text-3xl md:text-4xl font-serif text-primary lusena-gap-heading">
        {{ section.settings.origin_heading | escape }}
      </h2>
      <div class="space-y-4 text-secondary text-lg font-light leading-relaxed">
        {{ section.settings.origin_body }}
      </div>
    </div>

    <div class="order-2 md:order-1 bg-neutral-100 aspect-[4/5] flex items-center justify-center rounded-sm overflow-hidden{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}
>
      {%- if section.settings.origin_image != blank -%}
        {{
          section.settings.origin_image
          | image_url: width: 1400
          | image_tag:
            class: 'w-full h-full object-cover',
            loading: 'lazy',
            widths: '600, 900, 1200, 1400',
            sizes: '(min-width: 768px) 45vw, 90vw'
        }}
      {%- else -%}
        <span class="text-gray-400 font-light italic text-center px-6">
          {{ section.settings.origin_image_placeholder | escape }}
        </span>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}

  @media (min-width: 768px) {

    .lusena-quality-origin__heading {
      white-space: nowrap;
    }
  }
{% endstylesheet %}

