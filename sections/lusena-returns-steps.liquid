<section
  class="bg-white lusena-returns-steps"
  style="
    --lusena-section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --lusena-section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --lusena-section-padding-top-desktop: {{ section.settings.padding_top }}px;
    --lusena-section-padding-bottom-desktop: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container lusena-returns-steps__container mx-auto">
    <div class="text-center mb-16 space-y-3">
      <span class="text-accent-gold text-sm tracking-widest uppercase font-semibold{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.steps_kicker | escape }}
      </span>
      <h2 class="text-3xl md:text-5xl font-serif text-primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.steps_heading | escape }}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 relative" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}>
      <div class="lusena-returns-steps__connector" aria-hidden="true"><span></span></div>

      {%- for block in section.blocks -%}
        {%- if block.type == 'step' -%}
          {%- liquid
            assign icon_name = block.settings.icon | strip | downcase
            case icon_name
              when 'ðŸ›’'
                assign icon_name = 'shopping-bag'
              when 'shopping-bag', 'shopping bag', 'shoppingbag'
                assign icon_name = 'shopping-bag'
              when 'ðŸ“§'
                assign icon_name = 'mail'
              when 'mail', 'email', 'envelope'
                assign icon_name = 'mail'
              when 'ðŸ’°'
                assign icon_name = 'banknote'
              when 'banknote', 'money'
                assign icon_name = 'banknote'
              else
                assign icon_name = 'shopping-bag'
            endcase
          -%}
          <div class="lusena-returns-steps__card-wrap{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
            <div class="relative z-10 bg-surface-2 lusena-returns-steps__card p-8 text-center space-y-4">
              <span class="text-accent-gold text-xs tracking-widest uppercase font-semibold">
                {{ section.settings.step_label_prefix | escape }} {{ forloop.index }}
              </span>
              <div class="w-16 h-16 mx-auto bg-white rounded-full flex items-center justify-center text-accent-cta shadow-sm">
                {% render 'lusena-icon', name: icon_name, class: 'lusena-returns-steps__step-icon', stroke_width: 1.5 %}
              </div>
              <h3 class="font-serif text-xl text-primary">{{ block.settings.title | escape }}</h3>
              <p class="text-secondary text-sm leading-relaxed">{{ block.settings.text | escape }}</p>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .lusena-returns-steps {
    padding-top: var(--lusena-section-padding-top-mobile);
    padding-bottom: var(--lusena-section-padding-bottom-mobile);
  }

  .lusena-returns-steps__container {
    max-width: 102.4rem !important;
  }

  .lusena-returns-steps__card-wrap {
    position: relative;
    z-index: 10;
    height: 100%;
  }

  .lusena-returns-steps__card {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: 0.8rem;
    transition: transform 0.3s;
    will-change: transform;
  }

  @media (hover: hover) and (pointer: fine) {
    .lusena-returns-steps__card:hover {
      transform: translateY(-0.4rem);
    }
  }

  .lusena-returns-steps__connector {
    display: none;
    position: absolute;
    top: 4rem;
    left: 20%;
    right: 20%;
    pointer-events: none;
    z-index: 0;
  }

  .lusena-returns-steps__connector span {
    display: block;
    height: 0;
    border-top: 1px dashed rgb(74 74 74 / 0.2);
  }

  .lusena-returns-steps__step-icon {
    width: 2.8rem;
    height: 2.8rem;
  }

  @media (min-width: 768px) {
    .lusena-returns-steps {
      padding-top: var(--lusena-section-padding-top-desktop);
      padding-bottom: var(--lusena-section-padding-bottom-desktop);
    }

    .lusena-returns-steps__connector {
      display: block;
    }
  }
{% endstylesheet %}

