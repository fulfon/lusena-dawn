<section
  class="bg-brand-bg lusena-returns-editorial"
  style="
    --lusena-section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --lusena-section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --lusena-section-padding-top-desktop: {{ section.settings.padding_top }}px;
    --lusena-section-padding-bottom-desktop: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container lusena-returns-editorial__container mx-auto">
    <div class="lusena-returns-editorial__grid">
      <div class="space-y-6{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <span class="text-accent-gold text-sm tracking-widest uppercase font-semibold">
          {{ section.settings.kicker | escape }}
        </span>
        <h2 class="text-3xl md:text-5xl font-serif text-primary leading-tight">
          {{ section.settings.heading_line_1 | escape }}
          <span class="italic">{{ section.settings.heading_line_2 | escape }}</span>
        </h2>
        <div class="text-secondary leading-relaxed">
          {{ section.settings.body_paragraph_1 }}
        </div>
        <div class="text-secondary leading-relaxed">
          {{ section.settings.body_paragraph_2 }}
        </div>
        {%- if section.settings.link_label != blank and section.settings.link_url != blank -%}
          <a href="{{ section.settings.link_url }}" class="inline-flex items-center gap-2 text-accent-cta">
            {{ section.settings.link_label | escape }}
            {% render 'lusena-icon', name: 'arrow-right', class: 'w-4 h-4', stroke_width: 1.8 %}
          </a>
        {%- endif -%}
      </div>

      <div class="space-y-4{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <div class="grid grid-cols-2 gap-4 mb-2">
          <span class="text-xs uppercase tracking-widest text-secondary font-semibold text-center">
            {{ section.settings.standard_label | escape }}
          </span>
          <span class="text-xs uppercase tracking-widest text-accent-cta font-semibold text-center">
            {{ section.settings.lusena_label | escape }}
          </span>
        </div>

        <div {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}>
          {%- for block in section.blocks -%}
            {%- if block.type == 'compare_row' -%}
              <div class="grid grid-cols-2 gap-4 mb-4{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
                <div class="flex items-center gap-3 bg-white rounded-brand p-4">
                  <div class="w-6 h-6 rounded-full bg-neutral-100 flex items-center justify-center flex-shrink-0">
                    <span class="text-secondary text-sm leading-none">&times;</span>
                  </div>
                  <span class="text-sm text-secondary">{{ block.settings.standard | escape }}</span>
                </div>
                <div class="flex items-center gap-3 lusena-returns-editorial__lusena-row rounded-brand p-4">
                  <div class="w-6 h-6 rounded-full lusena-returns-editorial__lusena-dot flex items-center justify-center flex-shrink-0">
                    {% render 'lusena-icon', name: 'check', class: 'w-3.5 h-3.5 text-accent-cta', stroke_width: 2.5 %}
                  </div>
                  <span class="text-sm text-primary font-medium">{{ block.settings.lusena | escape }}</span>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .lusena-returns-editorial {
    padding-top: var(--lusena-section-padding-top-mobile);
    padding-bottom: var(--lusena-section-padding-bottom-mobile);
  }

  .lusena-returns-editorial__container {
    max-width: 115.2rem !important;
  }

  .lusena-returns-editorial__grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 4.8rem;
    align-items: center;
  }

  .lusena-returns-editorial__lusena-row {
    background-color: rgb(14 94 90 / 0.05);
    border: 1px solid rgb(14 94 90 / 0.1);
  }

  .lusena-returns-editorial__lusena-dot {
    background-color: rgb(14 94 90 / 0.1);
  }

  @media (min-width: 768px) {
    .lusena-returns-editorial {
      padding-top: var(--lusena-section-padding-top-desktop);
      padding-bottom: var(--lusena-section-padding-bottom-desktop);
    }
  }

  @media (min-width: 1024px) {
    .lusena-returns-editorial__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 6.4rem;
    }
  }
{% endstylesheet %}

