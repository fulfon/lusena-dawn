      "default": "Standard rynkowy"
    },
    {
      "type": "text",
      "id": "lusena_label",
      "label": "Comparison label right",
      "default": "LUSENA"
    }
  ],
  "blocks": [
    {
      "type": "compare_row",
      "name": "Comparison row",
      "settings": [
        {
          "type": "text",
          "id": "standard",
          "label": "Standard text",
          "default": "14 dni na zwrot"
        },
        {
          "type": "text",
          "id": "lusena",
          "label": "LUSENA text",
          "default": "60 dni na zwrot"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LUSENA Returns: Editorial",
      "blocks": [
        {
          "type": "compare_row",
          "settings": {
            "standard": "14 dni na zwrot",
