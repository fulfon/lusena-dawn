<div class="lusena-page-quality">
  <section class="bg-brand-bg py-24 md:py-32">
    <div class="container text-center max-w-4xl mx-auto space-y-6">
      <span class="text-accent-gold text-sm tracking-widest uppercase font-semibold">
        {{ section.settings.hero_kicker | escape }}
      </span>
      <h1 class="text-5xl md:text-7xl font-serif text-primary">
        {{ section.settings.hero_heading | newline_to_br }}
      </h1>
      <p class="text-lg md:text-xl font-light text-secondary leading-relaxed max-w-2xl mx-auto">
        {{ section.settings.hero_body | escape }}
      </p>
    </div>
  </section>

  <section class="py-24 bg-white">
    <div class="container grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
      <div class="bg-neutral-100 aspect-square flex items-center justify-center rounded-sm overflow-hidden">
        {%- if section.settings.momme_image != blank -%}
          {{
            section.settings.momme_image
            | image_url: width: 1400
            | image_tag:
              class: 'w-full h-full object-cover',
              loading: 'lazy',
              widths: '600, 900, 1200, 1400',
              sizes: '(min-width: 768px) 45vw, 90vw'
          }}
        {%- else -%}
          <span class="text-gray-400 font-light italic text-center px-6">
            {{ section.settings.momme_image_placeholder | escape }}
          </span>
        {%- endif -%}
      </div>

      <div class="space-y-6">
        <h2 class="text-3xl md:text-4xl font-serif text-primary">
          {{ section.settings.momme_heading | escape }}
        </h2>
        <div class="space-y-4 text-secondary text-lg font-light leading-relaxed">
          {{ section.settings.momme_body }}
          {%- if section.blocks.size > 0 -%}
            <ul class="space-y-2 mt-4">
              {%- for block in section.blocks -%}
                {%- if block.type == 'momme_benefit' -%}
                  <li class="flex flex-nowrap items-start gap-3" {{ block.shopify_attributes }}>
                    <span
                      class="w-1.5 h-1.5 rounded-full bg-accent-gold shrink-0"
                      style="margin-top: calc((1.625em - 0.375rem) / 2);"
                      aria-hidden="true"
                    ></span>
                    <span class="min-w-0 flex-1">{{- block.settings.text | escape -}}</span>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 bg-brand-bg">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-serif text-primary mb-12">
        {{ section.settings.fire_heading | escape }}
      </h2>

      <div class="max-w-4xl mx-auto bg-black/5 aspect-video flex items-center justify-center rounded-sm border border-secondary/10 overflow-hidden">
        {%- if section.settings.fire_video != blank -%}
          {{
            section.settings.fire_video
            | video_tag:
              controls: true,
              preload: 'metadata',
              class: 'w-full h-full object-cover'
          }}
        {%- else -%}
          <span class="text-gray-500 font-light text-center px-6">
            {{ section.settings.fire_video_placeholder | escape }}
          </span>
        {%- endif -%}
      </div>

      <p class="mt-8 text-secondary font-light max-w-2xl mx-auto">
        {{ section.settings.fire_body | escape }}
      </p>
    </div>
  </section>

  <section class="py-24 bg-white">
    <div class="container grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
      <div class="order-1 md:order-2 space-y-6">
        <span class="text-accent-gold text-sm tracking-widest uppercase font-semibold">
          {{ section.settings.origin_kicker | escape }}
        </span>
        <h2 class="lusena-page-quality__origin-heading text-3xl md:text-4xl font-serif text-primary">
          {{ section.settings.origin_heading | escape }}
        </h2>
        <div class="space-y-4 text-secondary text-lg font-light leading-relaxed">
          {{ section.settings.origin_body }}
        </div>
      </div>

      <div class="order-2 md:order-1 bg-neutral-100 aspect-[4/5] flex items-center justify-center rounded-sm overflow-hidden">
        {%- if section.settings.origin_image != blank -%}
          {{
            section.settings.origin_image
            | image_url: width: 1400
            | image_tag:
              class: 'w-full h-full object-cover',
              loading: 'lazy',
              widths: '600, 900, 1200, 1400',
              sizes: '(min-width: 768px) 45vw, 90vw'
          }}
        {%- else -%}
          <span class="text-gray-400 font-light italic text-center px-6">
            {{ section.settings.origin_image_placeholder | escape }}
          </span>
        {%- endif -%}
      </div>
    </div>
  </section>

  <section class="py-24 bg-brand-bg text-center">
    <div class="container max-w-4xl mx-auto space-y-12">
      <h2 class="text-3xl md:text-4xl font-serif text-primary">
        {{ section.settings.qc_heading | escape }}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {%- for block in section.blocks -%}
          {%- if block.type == 'qc_step' -%}
            <div class="lusena-page-quality__qc-card p-8 bg-white/50 backdrop-blur-sm rounded-sm border border-white/40{% if block.settings.highlight %} shadow-sm relative overflow-hidden{% endif %}" {{ block.shopify_attributes }}>
              {%- if block.settings.highlight -%}
                <div class="absolute top-0 right-0 bg-accent-gold text-white text-[10px] px-2 py-1 uppercase tracking-wider">
                  {{ section.settings.qc_highlight_badge | escape }}
                </div>
              {%- endif -%}
              <div class="text-4xl mb-4">{{ block.settings.icon }}</div>
              <h3 class="font-serif text-xl mb-2">{{ block.settings.title | escape }}</h3>
              <p class="text-secondary font-light text-sm">{{ block.settings.text | escape }}</p>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>

  <section class="py-24 bg-white border-t border-brand-bg">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-serif text-primary mb-6">
            {{ section.settings.cert_heading | escape }}
          </h2>
          <div class="text-secondary font-light text-lg mb-8">
            {{ section.settings.cert_body }}
          </div>

          {%- assign certificate_url = blank -%}
          {%- assign certificate_label = section.settings.cert_button_label -%}
          {%- if certificate_label == blank -%}
            {%- assign certificate_label = 'Pobierz Certyfikat (PDF)' -%}
          {%- endif -%}

          {%- if shop.metafields.lusena.oeko_tex_certificate != blank -%}
            {%- assign certificate_file = shop.metafields.lusena.oeko_tex_certificate.value -%}
            {%- if certificate_file != blank -%}
              {%- if certificate_file.url != blank -%}
                {%- assign certificate_url = certificate_file.url -%}
              {%- endif -%}
            {%- endif -%}
          {%- endif -%}

          {%- if certificate_url == blank -%}
            {%- if section.settings.cert_button_link != blank -%}
              {%- assign certificate_url = section.settings.cert_button_link -%}
            {%- endif -%}
          {%- endif -%}

          {%- if certificate_url != blank -%}
            <a
              href="{{ certificate_url }}"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-primary/20 disabled:pointer-events-none disabled:opacity-50 uppercase tracking-widest h-12 px-8 py-3 border border-primary bg-transparent text-primary hover:bg-surface-2 min-w-[200px]"
            >
              {{ certificate_label | escape }}
            </a>
          {%- endif -%}
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="bg-neutral-50 aspect-square flex items-center justify-center border border-neutral-100">
            {%- if section.settings.cert_logo_1 != blank -%}
              {{ section.settings.cert_logo_1 | image_url: width: 400 | image_tag: loading: 'lazy' }}
            {%- else -%}
              <span class="text-xs text-gray-400">{{ section.settings.cert_logo_1_placeholder | escape }}</span>
            {%- endif -%}
          </div>
          <div class="bg-neutral-50 aspect-square flex items-center justify-center border border-neutral-100">
            {%- if section.settings.cert_logo_2 != blank -%}
              {{ section.settings.cert_logo_2 | image_url: width: 400 | image_tag: loading: 'lazy' }}
            {%- else -%}
              <span class="text-xs text-gray-400">{{ section.settings.cert_logo_2_placeholder | escape }}</span>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

{% stylesheet %}
  .lusena-page-quality {
    letter-spacing: normal;
  }

  @media (min-width: 768px) {
    .lusena-page-quality__origin-heading {
      white-space: nowrap;
    }
  }
{% endstylesheet %}

