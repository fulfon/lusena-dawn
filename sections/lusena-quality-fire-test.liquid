<section
  class="bg-brand-bg lusena-quality-fire-test"
  style="
    --lusena-section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --lusena-section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --lusena-section-padding-top-desktop: {{ section.settings.padding_top }}px;
    --lusena-section-padding-bottom-desktop: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container text-center">
    <h2 class="text-3xl md:text-4xl font-serif text-primary mb-12">
      {{ section.settings.fire_heading | escape }}
    </h2>

    <div class="max-w-4xl mx-auto bg-black/5 aspect-video flex items-center justify-center rounded-sm border border-secondary/10 overflow-hidden">
      {%- if section.settings.fire_video != blank -%}
        {{
          section.settings.fire_video
          | video_tag:
            controls: true,
            preload: 'metadata',
            class: 'w-full h-full object-cover'
        }}
      {%- else -%}
        <span class="text-gray-500 font-light text-center px-6">
          {{ section.settings.fire_video_placeholder | escape }}
        </span>
      {%- endif -%}
    </div>

    <p class="mt-8 text-secondary font-light max-w-2xl mx-auto">
      {{ section.settings.fire_body | escape }}
    </p>
  </div>
</section>

{% stylesheet %}
  .lusena-quality-fire-test {
    padding-top: var(--lusena-section-padding-top-mobile);
    padding-bottom: var(--lusena-section-padding-bottom-mobile);
  }

  @media (min-width: 768px) {
    .lusena-quality-fire-test {
      padding-top: var(--lusena-section-padding-top-desktop);
      padding-bottom: var(--lusena-section-padding-bottom-desktop);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "LUSENA Quality: Fire test",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (desktop)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 56
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (desktop)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 56
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding top (mobile)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding bottom (mobile)",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "text",
      "id": "fire_heading",
      "label": "Fire heading",
      "default": "Test Ognia (The Fire Test)"
    },
    {
      "type": "video",
      "id": "fire_video",
      "label": "Fire video"
    },
    {
      "type": "text",
      "id": "fire_video_placeholder",
      "label": "Fire video placeholder",
      "default": "Video Placeholder: Test spalania nitki jedwabiu"
    },
    {
      "type": "text",
      "id": "fire_body",
      "label": "Fire body",
      "default": "Prawdziwy jedwab po spaleniu pachnie jak pieczone włosy i zamienia się w sypki popiół. Poliester topi się w twardą kulkę. Nie mamy nic do ukrycia."
    }
  ],
  "presets": [
    {
      "name": "LUSENA Quality: Fire test"
    }
  ]
}
{% endschema %}
